# i3Bar
#################################################################
bar {
	font pango:San Francisco Text 9
	position top
        i3bar_command "i3bar -t"
        status_command i3status -c ~/.config/i3/i3bar.conf

# show tray icons on the primary monitor
  tray_output primary
# show tray icons on the big monitor
  tray_output HDMI2

    # Dracula Colors ~k-f-
    colors {
    	   background #16161d
    	   statusline #BFBFBF
           separator  #44475A

