    # geometry [{width}]x{height}][+/-{x}+/-{y}]
    geometry = "0-20+20"
    history_length = 20
    horizontal_padding = 8
    idle_threshold = 120
    ignore_newline = no
    indicate_hidden = yes
    line_height = 0.5 
    monitor = 0
    padding = 8
    separator_color = frame
    separator_height = 1
    show_age_threshold = 60
    show_indicators = no # The (A)/(U) application url thing is visually distracting
    shrink = no
    sort = yes
    startup_notification = false
    sticky_history = yes
    transparency = 80
    word_wrap = yes

[shortcuts]
    #close = mod4+x
    #close_all = mod4+ctrl+x
    history = mod4+grave
