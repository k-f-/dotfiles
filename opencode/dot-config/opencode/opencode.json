{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "github": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{env:GITHUB_PERSONAL_ACCESS_TOKEN}"
      },
      "enabled": true
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true
    },
    "splitrail": {
      "type": "local",
      "command": [
        "splitrail",
        "mcp"
      ],
      "enabled": false
    },
    "agr": {
      "type": "local",
      "command": [
        "/Users/kef/Documents/Code/agr-mcp/start.sh"
      ],
      "environment": {
        "AGENTREPO_PATH": "/Users/kef/Documents/Code/agr"
      },
      "enabled": true
    }
  },
  "plugin": [
    "oh-my-opencode@latest",
    "opencode-token-monitor@latest",
    "file:///Users/kef/Documents/Code/agr-opencode-plugin",
    "file:///Users/kef/Documents/Code/kitty-tab-notify-plugin"
  ]
}
