{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "github": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{env:GITHUB_PERSONAL_ACCESS_TOKEN}"
      },
      "enabled": true
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true
    },
    "filesystem": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/kef/Documents",
        "/Users/kef/Desktop",
        "/Users/kef/Downloads"
      ],
      "enabled": true
    },
    "fetch": {
      "type": "local",
      "command": [
        "uvx",
        "mcp-server-fetch"
      ],
      "enabled": true
    },
    "agentic-dev-standards": {
      "type": "local",
      "command": [
        "node",
        "/Users/kef/Documents/Code/agentic-dev-standards/mcp-server.js"
      ],
      "enabled": true
    },
    "basic-memory": {
      "type": "local",
      "command": [
        "uvx",
        "basic-memory",
        "mcp",
        "--project",
        "agr"
      ],
      "enabled": true
    },
    "splitrail": {
      "type": "local",
      "command": [
        "splitrail",
        "mcp"
      ],
      "enabled": false
    },
    "agr": {
      "type": "local",
      "command": [
        "uv",
        "run",
        "--directory",
        "/Users/kef/Documents/Code/agr-mcp",
        "agr-mcp"
      ],
      "environment": {
        "AGENTREPO_PATH": "/Users/kef/Documents/Code/agr"
      },
      "enabled": true
    }
  },
  "plugin": [
    "oh-my-opencode@latest",
    "opencode-token-monitor@latest",
    "file:///Users/kef/Documents/Code/agr-opencode-plugin"
  ]
}
