# Images
image/jpg; feh %s;
image/jpeg; feh %s;
image/pjpeg; feh %s;
image/png; feh %s;
image/gif; ffplay %s;

# PDFs
application/pdf; zathura %s;

# HTML
text/html; /usr/bin/firefox '%s'\; sleep 1; needsterminal;
text/html; w3m -I %{charset} -T text/html; copiousoutput;

# Plain text
text/plain; ~/.bin/em %s;

# Unidentified files
application/octet-stream; xdg-open %s &;
